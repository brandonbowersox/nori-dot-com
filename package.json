{
  "version": "0.0.0",
  "private": true,
  "name": "nori-dot-com",
  "devDependencies": {
    "@rushstack/eslint-config": "^0.5.8",
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "codecov": "^3.7.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "2.5.0",
    "eslint-plugin-relay": "^1.7.1",
    "eslint-plugin-require-path-exists": "^1.1.9",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.3"
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --stream",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn run build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "jest": {
    "verbose": true,
    "projects": [
      {
        "testMatch": [
          "<rootDir>/packages/hooks/src/**/__tests__/**.test.ts"
        ],
        "preset": "ts-jest",
        "roots": [
          "<rootDir>/packages/hooks/src"
        ],
        "displayName": "hooks",
        "transform": {
          "^.+\\.tsx?$": "ts-jest",
          "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": true,
            "tsConfig": "tsconfig.json",
            "disableSourceMapSupport": true
          }
        }
      },
      {
        "preset": "ts-jest",
        "testMatch": [
          "<rootDir>/packages/comet-utils/src/**/__tests__/**.test.ts"
        ],
        "roots": [
          "<rootDir>/packages/comet-utils/src"
        ],
        "displayName": "comet-utils",
        "transform": {
          "^.+\\.tsx?$": "ts-jest",
          "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": true,
            "tsConfig": "tsconfig.json",
            "disableSourceMapSupport": true
          }
        }
      }
    ],
    "preset": "ts-jest"
  }
}
