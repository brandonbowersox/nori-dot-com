{
  "version": "0.0.0",
  "private": true,
  "name": "nori-dot-com",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "codecov": "^3.8.1",
    "jest": "^26.6.3",
    "lerna": "^3.22.0",
    "ts-jest": "^26.5.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.2"
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --parallel",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn run build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "jest": {
    "projects": [
      {
        "preset": "ts-jest",
        "testMatch": [
          "<rootDir>/packages/hooks/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "hooks"
      },
      {
        "testMatch": [
          "<rootDir>/packages/math/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "math",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/project/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "project",
        "preset": "ts-jest",
        "globals": {
          "ts-jest": {
            "tsconfig": "./packages/project/tsconfig.json"
          }
        }
      },
      {
        "testMatch": [
          "<rootDir>/packages/quantification/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "quantification",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/ggit/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "ggit",
        "preset": "ts-jest"
      },
      {
        "testMatch": [
          "<rootDir>/packages/bento/src/**/?(*.)+(test).[jt]s?(x)"
        ],
        "displayName": "bento",
        "preset": "ts-jest",
        "globals": {
          "ts-jest": {
            "tsconfig": "./packages/bento/tsconfig.json"
          }
        }
      }
    ]
  }
}
