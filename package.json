{
  "version": "0.0.0",
  "private": true,
  "name": "nori-dot-com",
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@types/react": "^16.9.36",
    "codecov": "^3.7.0",
    "jest": "^26.4.2",
    "lerna": "^3.22.0",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.3"
  },
  "resolutions": {
    "@types/react": "^16.9.36"
  },
  "scripts": {
    "build": "lerna run build",
    "watch": "lerna run watch --stream",
    "test": "jest",
    "bootstrap": "lerna bootstrap",
    "prepare": "yarn run build"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "jest": {
    "verbose": true,
    "projects": [
      {
        "testMatch": [
          "<rootDir>/packages/hooks/src/**/__tests__/**.test.ts"
        ],
        "preset": "ts-jest",
        "roots": [
          "<rootDir>/packages/hooks/src"
        ],
        "displayName": "hooks",
        "transform": {
          "^.+\\.tsx?$": "ts-jest",
          "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": true,
            "tsConfig": "tsconfig.json",
            "disableSourceMapSupport": true
          }
        }
      },
      {
        "preset": "ts-jest",
        "testMatch": [
          "<rootDir>/packages/project/src/**/__tests__/**.test.ts"
        ],
        "roots": [
          "<rootDir>/packages/project/src"
        ],
        "displayName": "project",
        "transform": {
          "^.+\\.tsx?$": "ts-jest",
          "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": true,
            "tsConfig": "tsconfig.json",
            "disableSourceMapSupport": true
          }
        }
      },
      {
        "preset": "ts-jest",
        "testMatch": [
          "<rootDir>/packages/comet-utils/src/**/__tests__/**.test.ts"
        ],
        "roots": [
          "<rootDir>/packages/comet-utils/src"
        ],
        "displayName": "comet-utils",
        "transform": {
          "^.+\\.tsx?$": "ts-jest",
          "^.+\\.ts?$": "ts-jest"
        },
        "moduleFileExtensions": [
          "ts",
          "js",
          "json",
          "node"
        ],
        "globals": {
          "ts-jest": {
            "diagnostics": true,
            "tsConfig": "tsconfig.json",
            "disableSourceMapSupport": true
          }
        }
      }
    ],
    "preset": "ts-jest"
  }
}
