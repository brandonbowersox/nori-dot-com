{
  "name": "@nori-dot-com/project",
  "version": "0.6.0",
  "description": "Nori supplier project specification and utilities",
  "keywords": [
    "nori"
  ],
  "author": "jaycenhorton <jaycen@nori.com>",
  "homepage": "https://nori.com",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nori-dot-eco/nori-dot-com.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "make:docs": "yarn run jsonschema2md -d ./src/json -e \"json\" -o ./docs -h false --aliasRefs --uniqueNames --topRef",
    "make:schema": "`yarn bin`/typescript-json-schema src/specification.ts Project -o ./src/json/specification.json --strictNullChecks=true --required=true --titles",
    "build": "tsc && yarn run make:schema && yarn run make:docs",
    "prepare": "yarn run build",
    "watch": "tsc -w -p ."
  },
  "bugs": {
    "url": "https://github.com/nori-dot-eco/nori-dot-com/issues"
  },
  "devDependencies": {
    "@adobe/jsonschema2md": "^4.1.6",
    "@types/geojson": "^7946.0.7",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.3.2"
  },
  "dependencies": {
    "ajv": "^6.12.3",
    "typescript-json-schema": "^0.42.0"
  }
}
