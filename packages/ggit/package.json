{
  "name": "@nori-dot-com/ggit",
  "version": "1.0.0",
  "description": "utilities for interacting with the Soil Metrics GGIT API",
  "keywords": [
    "nori",
    "COMET farm",
    "COMET",
    "co2",
    "carbon",
    "carbon removal",
    "Soil Metrics",
    "GGIT"
  ],
  "author": "jaycenhorton <jaycen@nori.com>",
  "homepage": "https://nori.com",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nori-dot-eco/nori-dot-com.git"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "prepare": "yarn run build",
    "watch": "tsc -w -p .",
    "make:schema": "`yarn bin`/typescript-json-schema src/input/input.ts InputData -o ./src/input/specification.json --strictNullChecks=true --required=true --titles=true --topRef=true --noExtraProps=true --defaultProps=true --validationKeywords=\"errorMessage\"",
    "build": "yarn run make:schema && tsc"
  },
  "bugs": {
    "url": "https://github.com/nori-dot-eco/nori-dot-com/issues"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "ajv": "^6.12.3",
    "ajv-errors": "^1.0.1",
    "typescript-json-schema": "^0.49.0"
  }
}
